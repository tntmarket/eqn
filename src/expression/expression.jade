.expression(
   ng-mousedown="select($event.button)"
   ng-click="$event.stopPropagation()"
   ng-blur="deleteIfEmpty()"
   draggable="{{!editing}}"

   ng-class="{\
      'expression-selected': selected,\
      'expression-editing': editing\
   }"
   ng-style="{\
      left: model.x + 'px',\
      top: model.y + 'px'\
   }"

   editable="editing"
   ng-model="model.src"
   spellcheck="false"
)

